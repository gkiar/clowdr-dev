{
    "jobDefinitionName": "clowdr",
    "type": "container",
    "parameters": {},
    "containerProperties": {
        "image": "gkiar/clowdr-task:latest",
        "vcpus": 1,
        "memory": 2000,
        "command": [
            "docker",
            "ps"
        ],
        "volumes": [
            {
                "host": {
                    "sourcePath": "/clowdata"
                },
                "name": "data-volume"
            },
            {
                "host": {
                    "sourcePath": "/var/run/docker.sock"
                },
                "name": "docker-socket"
            }
        ],
        "environment": [],
        "mountPoints": [
            {
                "containerPath": "/data",
                "readOnly": false,
                "sourceVolume": "data-volume"
            },
            {
                "containerPath": "/var/run/docker.sock",
                "readOnly": false,
                "sourceVolume": "docker-socket"
            }
        ],
        "privileged": true,
        "ulimits": []
    }
}
